<table class='table table-hover table-striped'>
  <% @votes.each do |text, count| %>
    <tr>
      <th><%= text.split.map(&:capitalize).join(' ') %></th> <!-- Captializes every first letter to make it appear as a name -->
      <td><%= count || 0 %>
    </tr>
  <% end %>
</table>
<p><a href='/'>Cast more votes!</a></p>
